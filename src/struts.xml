<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

		        <!--Configuration for the default packet.-->

		<package name="default"  extends="struts-default">

			<action name="loginAction" class="zzm.action.LoginAction">

				<result name="userLogin">/boot.jsp</result>
				
				<result name="adminLogin">/backstageMS.jsp</result>

				<result name="input">/login.jsp</result>

				<result name="error">/login.jsp</result>

			</action>
			
			<action name="registerAction" class="zzm.action.RegisterAction">

				<result name="register_success">/login.jsp</result>

				<result name="input">/register.jsp</result>

				<result name="error">/register.jsp</result>

			</action>
			
			<action name="logout" class="zzm.action.LogoutAction">

				<result name="success">/login.jsp</result>

			</action>
			<action name="adminRegister" class="zzm.action.RegisterAction" method="adminRegister">

				<result name="admin_success">/admin.jsp</result>

				<result name="input">/addAdmin.jsp</result>

				<result name="error">/addAdmin.jsp</result>

			</action>
			
	</package>

</struts> 
